<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.on('videoQueueUpdate', (videoQueue) => {
      const queueList = document.getElementById('queueList');
      queueList.innerHTML = '';
      videoQueue.forEach((link) => {
        const li = document.createElement('li');
        li.textContent = link;
        queueList.appendChild(li);
      });
    });
  </script>
</head>
<body>
  <h1>Admin - Video Queue</h1>
  <ul id="queueList">
    <% videoQueue.forEach(function(link) { %>
      <li><%= link %></li>
    <% }) %>
  </ul>
  <div id="videoPlayer">
    <!-- Place for video player implementation -->
  </div>
</body>
</html>
